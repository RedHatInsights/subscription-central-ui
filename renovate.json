{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "tekton": {
    "enabled": true
  },
  "npm": {
    "enabled": true,
    "schedule": ["* * 1 * *"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "rebaseWhen": "behind-base-branch",
    "branchTopic": "lock-file-maintenance",
    "schedule": ["* * 1 * *"]
  },
  "packageRules": [
    {
      "matchManagers": ["tekton", "npm"],
      "automerge": true
    }
  ]
}
